<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-8 col-md-6">
      <div class="panel panel-default">
          <div class="panel-heading">
              <span class="glyphicon glyphicon-lock"></span> Forgot your Password?
          </div>

          <div class="panel-body">

            <%= simple_form_for(resource,
                                :as => resource_name,
                                :url => password_path(resource_name),
                                :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>

              <%= devise_error_messages! %>

              <%= f.input :email,
                          :label_html => {:class => "col-sm-4"},
                          :right_column_html => {:class => "col-sm-8 col-xs-12"} %>

              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <%= f.button :submit, 'Send me reset password instructions', :class => 'btn-primary' %>
                </div>
              </div>

            <% end %>

          </div>
      </div>
    </div>
  </div>
</div>