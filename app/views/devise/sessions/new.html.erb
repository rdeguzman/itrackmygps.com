<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6 col-md-4">
      <div class="panel panel-default">
          <div class="panel-heading">
              <span class="glyphicon glyphicon-lock"></span> Login
          </div>

          <div class="panel-body">

            <%= simple_form_for(resource,
                                :as => resource_name,
                                :url => session_path(resource_name),
                                :html => {:class => 'form-horizontal' }) do |f| %>

              <%= f.input :email,
                          :autofocus => true,
                          :label_html => {:class => "col-sm-3"},
                          :right_column_html => {:class => "col-sm-9 col-xs-12"} %>

              <%= f.input :password,
                          :label_html => {:class => "col-sm-3"},
                          :right_column_html => {:class => "col-sm-9"} %>

              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                  <%= f.input_field :remember_me, :as => :boolean, :inline_label => 'Remember me' %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                  <%= f.button :submit, 'Submit', :class => 'btn-primary' %>
                </div>
              </div>

            <% end %>

          </div>
          <div class="panel-footer">
            Not Registerd? <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>

