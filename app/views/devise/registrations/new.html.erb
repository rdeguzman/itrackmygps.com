<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-md-6">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3>Sign Up</h3>
          </div>

          <div class="panel-body">

            <%= simple_form_for(resource,
                                :as => resource_name,
                                :url => registration_path(resource_name),
                                :html => {:class => 'form-horizontal' }) do |f| %>

              <%= f.error_notification %>

              <%= display_base_errors resource %>

              <%= f.input :username,
                          :autofocus => true,
                          :required => true,
                          :input_html => {:class => "input-xxlarge"},
                          :error_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :label_html => { :class => "col-sm-5"},
                          :right_column_html => {:class => "col-sm-7"} %>

              <%= f.input :password,
                          :required => true,
                          :hint => "Minimum of 8 characters",
                          :hint_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :error_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :label_html => { :class => "col-sm-5"},
                          :right_column_html => {:class => "col-sm-7"} %>

              <%= f.input :password_confirmation,
                          :required => true,
                          :error_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :label_html => { :class => "col-sm-5"},
                          :right_column_html => {:class => "col-sm-7"} %>

              <%= f.input :email,
                          :required => true,
                          :error_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :label_html => { :class => "col-sm-5"},
                          :right_column_html => {:class => "col-sm-7"} %>

              <%= f.input :pin,
                          :required => true,
                          :hint => "Minimum of 4 digits. Securely share your location to your map viewers with this pin",
                          :hint_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :error_html => { :class => "col-sm-offset-5 col-sm-7"},
                          :label_html => { :class => "col-sm-5"},
                          :right_column_html => {:class => "col-sm-7"} %>

              <div class="form-group">
                <div class="col-sm-offset-5 col-sm-7">
                  <%= f.button :submit, 'Sign Up', :class => 'btn-primary' %>
                </div>
              </div>

            <% end %>

          </div>
      </div>
    </div>
  </div>
</div>


