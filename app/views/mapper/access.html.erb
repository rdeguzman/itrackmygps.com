<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-8 col-md-6">
      <div class="panel panel-default">
          <div class="panel-heading">
              <span class="glyphicon glyphicon-lock"></span> Temporary Map Access
          </div>

          <div class="panel-body">

            <%= simple_form_for(:live,
                                :url => map_live_path,
                                :html => {:class => 'form-horizontal' }) do |f| %>

              <%= f.input :username,
                          :as => :hidden,
                          :input_html => { :value => @username } %>

              <%= f.input :pin,
                          :autofocus => true,
                          :label => "PIN",
                          :label_html => {:class => "col-sm-4"},
                          :right_column_html => {:class => "col-sm-8 col-xs-12"} %>

              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8">
                  <%= f.button :submit, 'Submit', :class => 'btn-primary' %>
                </div>
              </div>

            <% end %>

          </div>
          <div class="panel-footer">
            To view the location of username, you need the provided pin to proceed.
          </div>
      </div>
    </div>
  </div>
</div>